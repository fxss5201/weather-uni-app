<view class="content" bind:__l="__l"><block wx:if="{{cityList.length}}"><view class="select-result select-title">{{'当前选择的是：'+selectResult+''}}</view></block><view class="select-result"><button class="select-btn" type="primary" size="mini" data-event-opts="{{[['tap',[['addCity',['$event']]]]]}}" bindtap="__e">添加城市</button><text class="sub-select-title">添加的城市可以在当前城市页面快速切换</text></view><block wx:if="{{cityList.length}}"><picker-view value="{{value}}" indicator-style="{{indicatorStyle}}" data-event-opts="{{[['change',[['bindChange',['$event']]]]]}}" bindchange="__e"><picker-view-column><block wx:for="{{cityList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="item">{{item.name}}</view></block></picker-view-column><block wx:if="{{cityList[value[0]].districts.length}}"><picker-view-column><block wx:for="{{cityList[value[0]].districts}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="item">{{item.name}}</view></block></picker-view-column></block><block wx:if="{{cityList[value[0]].districts.length&&cityList[value[0]].districts[value[1]].districts.length}}"><picker-view-column><block wx:for="{{cityList[value[0]].districts[value[1]].districts}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="item">{{item.name}}</view></block></picker-view-column></block></picker-view></block></view>