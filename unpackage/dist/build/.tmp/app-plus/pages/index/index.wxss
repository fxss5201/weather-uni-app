.content {
  color: #333;
  font-size: 28rpx;
  text-align: center;
}
.nav-list {
  position: fixed;
  top: 195rpx;
  right: 0;
  z-index: 100;
  width: 150rpx;
  background-color: #fff;
  border: 1px solid #c8c7cc;
  border-right: 0;
  border-radius: 12rpx 0 0 12rpx;
}
.nav-list .item {
    border-top: 1px solid #c8c7cc;
    padding: 20rpx 0;
    text-align: center;
    cursor: pointer;
}
.nav-list .item:nth-child(1) {
      border-top: 0;
}
.nav-list .item.on {
      color: #007aff;
}
.info-title {
  margin: 0 15rpx;
  padding: 30rpx 0;
  font-size: 32rpx;
  font-weight: 700;
  text-align: left;
  border-bottom: 1px solid #c8c7cc;
}
.info-sub-title {
  font-weight: 700;
  color: #999;
  font-size: 24rpx;
}
.list-info {
  padding: 15rpx;
}
.list-info .item {
    padding: 20rpx 0;
    border-bottom: 1px solid #c8c7cc;
}
.list-all-info {
  margin: 0 15rpx;
}
.scroll-box {
  white-space: nowrap;
}
.scroll-box .scroll-item {
    display: inline-block;
    width: 200rpx;
}
.scroll-box .scroll-item .item-text {
      padding: 20rpx 0;
      border-left: 1px solid #c8c7cc;
      border-bottom: 1px solid #c8c7cc;
}
.scroll-box .scroll-item:nth-child(1) .item-text {
      border-left: 0;
}
.all-time {
  margin: 0 15rpx;
  padding: 20rpx 0 40rpx;
}

